<view class="tab-control">
  <block wx:for="{{titles}}" wx:key="{{index}}">
    <view class="tab-item {{currentIndex == index ? 'active':''}}" bind:tap="handleTabClick"
    data-index="{{index}}">
      <text>{{item}}</text>
    </view>
  </block>
