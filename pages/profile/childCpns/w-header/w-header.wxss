/* pages/profile/childCpns/w-header/w-header.wxss */
.header{
  position: relative;
  display: flex;
  background: #ff5777;
  border-top: 2rpx solid #fff;
  padding:12rpx 30rpx;
  color:#fff;
}
.avatar image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
}
.login-info{
  vertical-align: middle;
  margin-left: 30rpx;
}
.login-info .login{
  font-size: 36rpx;
  margin-top: 18rpx;
}
.login-info .phone{
  font-size: 28rpx;
  margin-top: 10rpx;
}
.phone image{
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
  position: relative;
  bottom: 4rpx;
} 
.arrow {
  position: absolute;
  right:30rpx;
}
.arrow image{
  width: 60rpx;
  height: 60rpx;
}