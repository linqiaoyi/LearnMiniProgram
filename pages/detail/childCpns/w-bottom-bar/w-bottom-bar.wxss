/* pages/detail/childCpns/w-bottom-bar/w-bottom-bar.wxss */
.bottom-info{
  position: fixed;
  right: 0;
  left: 0;
  bottom: 0;
}
.bottom-bar{
  display: flex;
  height: 120rpx;
  background-color: #fff;
  font-size: 30rpx;
  box-shadow: 0 -2rpx 2rpx rgba(100,100,100,.2);
  /* z-index:2; */

}
.bar-item{
  flex:1;
  display: flex;
}
.left-item,.right-item{
  flex:1;
  text-align: center;
}
.left-item{
  font-size: 28rpx;
}
.left-item image{
  margin-top: 20rpx;
  width: 44rpx;
  height: 44rpx;
}
.right-item{
  line-height: 120rpx;
}
.cart{
  background: #ffe817;
}
.buy{
  background: #ff5777;
  color:#fff;
}