.base-info{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.title{
  font-size: 32rpx;
  font-weight: bold;
}
.price-info{
  margin-top:8rpx;
  font-size: 46rpx;
}
.new-price{
  color:#ff5777;
  margin-left:4rpx;
}
.old-price{
  color:rgba(100,100,100,0.6);
  font-size: 28rpx;
  margin-left:20rpx;
  text-decoration: line-through;
}
.discount{
  background-color: #ff5777;
  color:#fff;
  font-size: 24rpx;
  padding:4rpx 6rpx;
  border-radius: 16rpx;
  margin-left:16rpx;
  position: relative;
  bottom:12rpx;
}
.columns{
  margin-top: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2px solid #eee;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color:#333;
}
.column-item{
  text-align: center;
}
.services{
  margin-top: 26rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  vertical-align: middle;
}
.services .icon{
  height: 30rpx;
  width: 30rpx;
  padding-right: 3rpx;
}