<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>Hello World</text>
<text>你好小程序</text>
<text>\n</text>
<text>Hello World\n</text>
<text>你好小程序</text>
<!-- 2.selectable:true -->
<!-- 默认情况下text中的文本长按是不能选中的 -->
<!-- 以下两种写法相同，推荐第二种 -->
<text selectable="{{true}}">Hello qiao\n</text>
<text selectable>Hello qiao\n</text>
<!-- 3.space：决定文本空格大小 -->
<text>Hello World\n</text>
<text space="nbsp">Hello World\n</text>
<text space="emsp">Hello World\n</text>
<text space="ensp">Hello World\n</text>
<text decode>5 &gt; 3\n</text>
<text decode>3 &lt; 5</text>
<text decode>3 &lt; 5</text>
<text decode>5 &gt; 3\n</text>
<text decode>3 &lt; 5</text>
<text decode>3 &lt; 5</text>