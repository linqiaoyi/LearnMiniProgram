<!--pages/home/home.wxml-->
<text class="title">Hello World</text>
<button size="mini">按钮</button>

<view>知识点三</view>
<view>呵呵呵</view>
<!-- 1.使用自定义组件 -->
<my-cpn></my-cpn>
<my-cpn />
<my-style></my-style>
<my-prop title="哈哈哈" content="你好" titleclass="red"></my-prop>
<my-prop title="嘿嘿嘿" content="Hello" titleclass="green"></my-prop>
<my-prop title="呵呵呵" content="Hi" titleclass="blue"></my-prop>
<text>当前计数：{{counter}}</text>
<my-event bind:increment="handleIncrement"></my-event>
<w-tab-control titles="{{['流行','新款','精选']}}"
                bind:itemClick="handleTabClick"
/>
<button size="mini" bind:tap="handleIncrementCpn">修改组件内部的数据+1</button>
<my-sel id="sel-id"></my-sel>
<my-slot>
  <button size="mini">按钮</button>
</my-slot>
<my-slot>
  <text>我是一段文本</text>
</my-slot>
<my-slot>
  <image src="http://mmbiz.qpic.cn/sz_mmbiz_jpg/GEWVeJPFkSEz7tgvlaTtv2MYO01RZr0y2lKyiby6STpicpYB2a46S17caRhHMDhotyz62xeNAwc5CibskvQH3eKwg/0?wx_fmt=jpeg" alt=""/>
</my-slot>
<my-slot>
  <slider value="{{60}}"></slider>
</my-slot>
<!-- 多插槽的使用 -->
<!-- 注意事项
  1.给每个插槽起个名字:name属性
  2.必须在component对象中添加一个选项：options->multipleSlots :true
-->
<button bind:tap="clickChangeShow">切换显示</button>
<block wx:if="{{isShow}}">
  <my-multiple>
  <button size="mini" slot="slot2">按钮</button>
  <slider slot="slot1" />
</my-multiple>
</block>
