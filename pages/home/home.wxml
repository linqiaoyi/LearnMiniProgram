<!--pages/home/home.wxml-->
<!-- 小程序的数据绑定：{{}} Mustache -->
<view>{{message}}</view>
<view>我的年龄是{{age}}</view>
<view>Hello World</view>
<!-- 列表循环:wx:for -->
<!-- <view wx:for="{{students}}">{{item.name}}</view> -->
<view>当前的数字为{{counter}}</view>
<view wx:for="{{list}}">{{item.title}}-{{item.discount}}</view>
<button size="mini" bindtap="handleBtnClick">点击+1</button>
<button size="mini" bindtap="handSubClick">点击-1</button>
<!-- 2.获取用户信息的方式 -->
<button size="mini"
        open-type="getUserInfo" 
        bindgetuserinfo="handleGetUserInfo">点击获取用户信息
</button>

<!-- 3.展示用户信息 -->
<open-data type="userNickName"></open-data>
<open-data type="userAvatarUrl"></open-data>
