<!--pages/cart/childCpns/w-cart-item/w-cart-item.wxml wx:if="{{citem}}"-->
<view class="cart-item" >
  <view class="item-icon">
    <w-check-icon bindtap="onCheckClick" data-index="{{cindex}}" isChecked="{{goods.checked}}"/>
  </view>
  <view class="item-img">
    <image class="image" src="{{goods.imageUrl}}" mode="aspectFill"/>
  </view>
  <view class="other-info">
    <view class="item-info">
      <view class="title">{{goods.title}}</view> 
      <view class="desc">{{goods.desc}}</view>
    </view>
    <view class="price-count">
      <view class="price">ï¿¥{{goods.price}}</view>
      <view class="count">x{{goods.count}}</view> 
    </view>
  </view>

</view>