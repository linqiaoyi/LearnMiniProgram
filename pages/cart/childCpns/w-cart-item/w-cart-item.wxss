/* pages/cart/childCpns/w-cart-item/w-cart-item.wxss */
.cart-item{
  display: flex;
  padding:20rpx;
  align-items: center;
  border: 2rpx solid #eee;
}
.item-icon{
  height: 40rpx;
  width: 40rpx;
  /* z-index:9; */
}
.item-img{
  flex:1;
  width: 200rpx;
  padding-right: 10rpx;
}
.item-img .image{
  width: 180rpx;
  height: 240rpx;
  border-radius: 16rpx;
}
.item-info{
  flex:1;
  width: 480rpx;
}
.item-info .title{
  font-size: 34rpx;
  font-weight: 700;
  color:#333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.item-info .desc{
  font-size: 28rpx;
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.price-count{
  display: flex;
  margin-top: 40rpx;
  justify-content: space-between;
}
.price{
  color:#ff5777;
  font-size: 40rpx;
}